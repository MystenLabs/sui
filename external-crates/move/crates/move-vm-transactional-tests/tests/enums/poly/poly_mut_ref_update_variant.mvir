//# run
module 0x2.m {
import 0x1.PolymorphicEnums;
entry foo() {
    let x: PolymorphicEnums.EnumWithTwoVariants<u64>;
    let y: bool;
    label b0:
        x = PolymorphicEnums.f(42);
        y = PolymorphicEnums.is_variant_two(&x);
        assert(!move(y), 100);
        PolymorphicEnums.mutate(&mut x, 43, 42);
        y = PolymorphicEnums.is_variant_two(&x);
        assert(move(y), 101);
        return;
}
}
